{
    "name": "netvlies/silex-skeleton",
    "description": "A project skeleton for silex applications.",
    "type": "project",
    "require": {
        "php"                       : ">=5.3.3",
        "silex/silex"               : "~1.0.0",
        "silex/web-profiler"        : "~1.0.1",
        "doctrine/dbal"             : "~2.3",
        "symfony/config"            : "~2.3",
        "symfony/console"           : "~2.3",
        "symfony/finder"            : "~2.2",
        "symfony/security"          : "~2.3",
        "symfony/monolog-bridge"    : "~2.2",
        "symfony/twig-bridge"       : "~2.3",
        "symfony/validator"         : "~2.3",
        "symfony/translation"       : "~2.3",
        "symfony/form"              : "~2.3",
        "symfony/yaml"              : "~2.3",
        "swiftmailer/swiftmailer"   : "5.*",
        "kriswallsmith/assetic"     : "~1.0.0",
        "mheap/silex-assetic"       : "~1.0.0",
        "twitter/bootstrap"         : "2.3.2"
    },
    "require-dev": {
        "symfony/browser-kit"   : "~2.3",
        "symfony/css-selector"  : "~2.3",
        "symfony/dom-crawler"   : "~2.3"
    },
    "scripts": {
        "post-install-cmd": "Netvlies\\Composer\\Script::install",
        "post-update-cmd": "Netvlies\\Composer\\Script::install"
    },

    "autoload": {
        "psr-0": {
            "Netvlies": "src",
            "Test": "tests"
        }
    }
}
