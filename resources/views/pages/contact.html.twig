{% extends "layout.html.twig" %}

{% block title %}Contact{% endblock %}

{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <span class="help-inline" style="color:#d2322d">{% for error in errors %}{{ error.message }} {% endfor %}</span>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block content %}
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Contact <strong>business casual</strong></h2>
                <hr>
            </div>
            <div class="col-md-8">
                <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
                <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
            </div>
            <div class="col-md-4">
                <p>Phone: <strong>076.5302525</strong></p>
                <p>Email: <strong>info@netvies.nl</strong></p>
                <p>Address: <strong>Prinsenkade 8<br>4800 DW<br> Breda</strong></p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Contact <strong>form</strong></h2>
                <hr>
                {% if submitted is defined and submitted %}
                    <p>Thank you for submitting the form. We will get back to you soon.</p>
                {% else %}
                    <p>This contact form is just the form elements, it is not a working form. You will have to make the form work by yourself, or take it out if you can't figure out how to make it work.</p>
                    <form role="form" method="post" novalidate="novalidate">
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label>Naam</label>
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Email Adres</label>
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-lg-12">
                                <label>Bericht</label>
                                {{ form_widget(form.message) }}
                                {{ form_errors(form.message) }}
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group col-lg-12">
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
